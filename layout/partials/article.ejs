<article class="post">
    <h3><a href="<%- url_for(post.path)%>"><%= post.title%></a></h3>
    <p>
        <% if(theme.leancloud_view.open){%>
            <span class="visitors">visitors
                <span id="<%- url_for(post.path)%>" class="leancloud_visitors" data-flag-title="<%= post.title%>">
                    <span class="leancloud-visitors-count">0</span>
                </span>
            </span>&nbsp;&nbsp;•&nbsp;&nbsp;
        <%}%>
        <span class="tag">
                    <%- list_categories(post.categories, {
                        show_count: false,
                        class: 'article-category',
                        style: 'none',
                        separator: '&nbsp;,&nbsp;'
                    }) %>
                </span>&nbsp;&nbsp;•&nbsp;&nbsp;
        <span class="date"><%= date(post.date,'YYYY,MM,DD')%></span>
    </p>
    <div class="post-image">
        <a href="<%- url_for(post.path)%>"><img src="<%- post.pho%>"></a>
    </div>
    <%if(theme.index_pagelength||theme.index_pagelength=='0'){%>
        <% var con=post.content.replace(/<[^<]*>/ig,'').replace(/\r|\n/ig,'').substring(0,theme.index_pagelength)+'...';%>
        <div class="page-content"><%=con%></div>
    <%}else{%>
        <div class="page-content"><%- post.content%></div>
    <%}%>
    <div class="post-readmore">
        <a href="<%- url_for(post.path)%>">Read More</a>
    </div>
</article>